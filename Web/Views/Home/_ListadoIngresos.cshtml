@using Web.ViewModels;
@model List<VisitasVm>

<div class="card">
    <div class="card-header">
        <h3><strong>Historial de visistas</strong></h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Fecha)</th>
                    <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Hora)</th>
                    <th>Visitó a</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
  
                @foreach (VisitasVm item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Fecha</td>
                        <td>@item.Hora</td>
                        <td>@item.Visito</td>
                        <td class="text-center"><a href="#" class="btn btn-outline-primary" onclick="deleteVisita(@item.Id)"><i class="fa fa-trash"></i></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
